/* pages/fordetail/fordetail.wxss */
@import "../../utils/detailPage/detailPage.wxss";
@import "../../utils/cardPage/cardPage.wxss";


.nav
{
  position:fixed;
  bottom:0;
}

.bar
{
  display:flex;
  flex-direction: row;
}

.navimage
{
  flex:1;
  height:100rpx;
}

.button-rent
{
  flex:6;
}

.dialog_hide
{
  display: none;
}

.dialog_show
{
  display: block;
  position:fixed;
  background-color: #fff;
  height:360rpx;
  width:100%;
  bottom:100rpx;
}
.block
{
  width:100%;
  display: flex;
  flex-direction: column;
}
.select
{
  display:flex;
  flex-direction: row;
  width:100%;
  justify-content: center;
  height:80rpx;
}

.rent
{
  position: fixed;
  right:0;
  bottom:120rpx;
}

.button
{
  background-color:#fff;
  width:20%;
}

.choose-hover
{
  border:8rpx rgb(254, 238, 54) solid;
}

.selectblock
{
display: flex;
flex-direction: column;
position: absolute;
height:260rpx;
width:100%;
bottom: 2%;
right:0;
}

.itemname
{
  flex:3;
  font-size:28rpx;
  text-align: left;
  width:400rpx;
  display: -webkit-box; 
  -webkit-line-clamp: 2; 
  overflow: hidden;  
  text-overflow: ellipsis; 
  -webkit-box-orient: vertical;
  word-break: break-all;  
}