/* pages/shoppage/shoppage.wxss */
@import "../../utils/quantityPage/quantityPage.wxss";
@import "../../utils/orderlistpage/orderlistpage.wxss";

.brand_container
{
  display: flex;
  flex-direction: column;
}

.brand
{
  display:flex;
  flex-direction: row;
  justify-content:space-between;
}

.brand_item
{
  flex:1;
  max-height: 180rpx;
  border: 4rpx #fff solid;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.brand_image
{
  width:100%;
  border: 4rpx rgba(254, 238, 54, 0.3) solid;
  padding: 10rpx #fff;
}

.brand_name
{
  color: #000;
  height: 10rpx;
  font-size: 10px;
  text-align:center;
  margin: 0px 5px; 
  margin-bottom: 5px; 
}

.brand_title
{
  margin-top: 20rpx;
  margin-bottom: 0rpx;
  padding: 0px 10px;
}

.title{
  font-size: 14px;
  font-weight:900;
}

.line_name{
  font-size: 10px;
  color: #98989f;
  display: flex;
  justify-content:space-between;/**两边对齐**/
}
