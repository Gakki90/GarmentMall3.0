/* utils/quantityPage/quantityPage.wxss */
.stepper {  
    width:200rpx;  
    height: 50rpx;  
    /*给主容器设一个边框*/  
    border: 1rpx solid #000000;  
    border-radius: 3px;  
    margin:0 auto;  
    display:flex;
    flex-direction: row;
}  
  
/*加号和减号*/  
.stepper text {  
    flex:1; 
    line-height: 15px;  
    text-align: center;  
    float: left;  
}  
  
/*数值*/  
.stepper input {  
    flex:2;
    float: left;  
    margin: 0 auto;  
    text-align: center;  
    font-size: 12px;  
    color: #000000;
    /*给中间的input设置左右边框即可*/  
    border-left: 1rpx solid #000000;  
    border-right: 1rpx solid #000000;  
}  
  
/*普通样式*/  
.stepper .normal{  
    color: black;  
}  
  
/*禁用样式*/  
.stepper .disabled{  
    color: #ccc;  
}  