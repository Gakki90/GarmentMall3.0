/**图文详情 浮层**/
.tab-bar-detail{
  width: 75rpx;
  height: 75rpx;
  background-color: #fff;
  border-radius:25px;
  position: fixed;  
  z-index: 2;
  right: 4%;
  top:500rpx;
  border:1rpx solid #F3F4F6; 
  line-height:25rpx; 
  text-align: center;  
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.tab-bar-detail text{
  font-size: 22rpx;
  color: #e80080;
}

.welfare-container
{
  margin:20rpx;
}

.welfares{
  display: flex;
  justify-content: left;
  flex-direction: row;
  flex-wrap: wrap;
  margin:10px 5px;
  border:20rpx  rgb(254, 238, 54) solid;
}

.welfares-good{
  height: 560rpx; 
  width: 47%;
  margin:0px auto;
  margin-bottom: 20px;
  position: relative;
  display: inline-block;
  font-size: 24rpx;
}

.welfares-image{
  width: 100%;
  display: inline-block;
  border: 2px rgb(254, 238, 54) solid; 
}
.brandimage
{
  width:100%;
  display: inline-block;
  border:1px #eee solid; 
}
.welfares-good .product-name{
  color: #000;
  text-align:left;
  margin: 0px 5px; 
  display: -webkit-box; 
  -webkit-line-clamp: 2; 
  overflow: hidden;  
  text-overflow: ellipsis; 
  -webkit-box-orient: vertical;
  word-break: break-all;  
}
.product-price-wrap .product-price-new{
  color: #e80080;
  margin-left:5px;
  font-weight:900;
}
.product-price-wrap .product-price-old{
  color: #888;
  text-decoration: line-through;
  padding-left: 2px;
}
.product-price-wrap .discount{
  position: absolute;
  right: 5px;
  background-color: #000;
  color: #fff;
}

/**商品价格**/
.product-price-wrap{
  display: flex;
  justify-content:space-between;/**两边对齐**/
  flex-direction: row;
  flex-wrap: wrap;
  width:100%;
  margin:2px 2px;
   /* border:1rpx solid red;   */
}
 .product-price-wrap .product-price-new{
  color: #e80080;
  font-weight:400;
  font-size: 24px;
}
.product-price-wrap .product-price-old{
  color: #888;
  text-decoration: line-through;
  padding-left: 5px;
  font-size: 14px;
  line-height:30px;
  font-weight:300;
}
.product-price-wrap .discount{
  margin: 5px 5px;
  background-color: #000;
  color: #fff;
  height: 18px;
  font-size: 14px;
  border-radius:2px;
} 
.product-price-wrap image{
  width:40rpx;
  height: 40rpx;
  margin: 5px 5px; 
}
.product-name-wrap{
  margin: 0px 10px;
   /* border:1rpx solid red;  */
}
.product-name-wrap text{
  font-size: 14px;
  font-weight:400;
  line-height: .48rem;
  color: #404040;
}
.details{
   padding: 0px 5px 0 5px; 
}
.detail {
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  margin-bottom: 0rpx;
}

.screening
{
  display: flex;
  justify-content: left;
  flex-direction: row;
  flex-wrap: wrap;
  margin:10px 5px;
  border:20rpx  rgb(254, 238, 54) solid;
}

.product-price
{
  color: #e80080;
  margin-left:5px;
  font-weight:900;
  font-size:40rpx;
}