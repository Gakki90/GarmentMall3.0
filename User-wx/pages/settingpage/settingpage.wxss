/* pages/settingpage/settingpage.wxss */
.infocontainer
{
width:100%;
height:280rpx;
display:flex;
flex-direction: row;
background-color: rgba(255,255,255,0.9);
border-bottom: 4rpx rgb(254, 238, 54) solid;
}

.info
{
  flex:1;
  height:100%;
  border-right:4rpx rgb(254, 238, 54) solid;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  top:10rpx;
}

.userinfo-avatar {
  width: 108rpx;
  height: 108rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color:black;
}

.person-list {
  display: flex;
  flex-direction: column;
  align-items: left;
  background-color: rgba(255,255,255,0.9);
}
.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
}
.item-image {
  width: 40rpx;
  height: 40rpx;
  margin:10rpx;
}
.item-text {
  color: gray;
  font-size: 25rpx;
  margin-left: 20rpx;
}
.item-detail
{
  color: gray;
  font-size: 25rpx;
  margin-left: 20rpx;
  position: absolute;
  right:5rpx;
}
.item-input
{
  color: gray;
  font-size: 25rpx;
  margin-left: 20rpx;
  position: absolute;
  right:0;
  text-align: right;
}

.line {
  width: 100%;
  height: 2rpx;
  background: lightgray;
}

.save
{
  color: gray;
  font-size: 25rpx;
  position: absolute;
  right:2%;
}

.savenone
{
  display:none;
}