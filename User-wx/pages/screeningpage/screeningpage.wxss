/* pages/screeningpage/screeningpage.wxss */
@import "../../utils/detailPage/detailPage.wxss";


.picker-box {
  margin-top: 0rpx;
  width: 100%;
  position: fixed;
  top: 0;
}

.skill-picker {
  height: 80rpx;
  background-color: rgba(0, 121, 132, 0.8);
  box-shadow: 0rpx 5rpx 16rpx rgba(0, 0, 0, 0.05);
}

.skill-title {
  line-height: 80rpx;
  height:80rpx;
  width: 100%;
  text-align: center;
  vertical-align: middle;
  color: rgb(0, 0, 0) ;
  font-size: 30rpx;
  font-weight: bold;
  background-color:rgb(255, 255, 255);
  border:4rpx rgb(254, 238, 54) solid;
  position: fixed;
  z-index: 999;
}

.content
{
  margin-top:10%; 
}

.drop-down {
  position: fixed;
  top: 0;
  right: 0;
  margin-top: 18rpx;
  margin-right: 48rpx;
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
}