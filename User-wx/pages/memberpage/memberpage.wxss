/* pages/memberpage/memberpage.wxss */
.person-list {
  display: flex;
  flex-direction: column;
  align-items: left;
}

.inputphone
{
  height: 100rpx;
  margin-top:30rpx; 
  margin-left:10rpx;
  margin-right:10rpx; 
  background-color: rgba(255,255,255,0.9);
  border:4rpx rgb(254, 238, 54) solid;
}

.inputnumber
{
  text-align: left;
  display:flex;
  margin:0 auto;
  height:100%;
  width:100%;
}

.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 200rpx;
  margin-top:30rpx; 
  margin-left:10rpx;
  margin-right:10rpx; 
  background-color: rgba(255,255,255,0.9);
  border:4rpx rgb(254, 238, 54) solid;
}
.item-image {
  width: 40rpx;
  height: 40rpx;
  margin:10rpx;
}
.item-text {
  color: gray;
  font-size: 25rpx;
  margin-left: 20rpx;
}
.item-detail
{
  color: gray;
  font-size: 25rpx;
  margin-left: 20rpx;
  position: absolute;
  right:5rpx;
}
.item-input
{
  color: gray;
  font-size: 25rpx;
  margin-left: 20rpx;
  position: absolute;
  right:5rpx;
}

.line {
  width: 100%;
  height: 2rpx;
  background: lightgray;
}

.defray
{
  background-color:  rgba(254, 238, 54, 0.6);
  border:4rpx  rgba(254, 238, 54, 0.6) solid;
  font-size:25rpx;
  position: absolute;
  right:40rpx;
  width:120rpx;
  text-align:center;
}

.defray::after
{
  border:none;
}