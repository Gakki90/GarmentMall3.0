/* pages/userInfo/userInfo.wxss */

.container
{
  width:100%;
  height:50px;
  display: flex;
  flex-direction: row;
  background: rgba(255,255,255,0.6);
}

.infocontainer
{
width:100%;
height:280rpx;
display:flex;
flex-direction: row;
background-color: rgba(255,255,255,0.9);
border-bottom: 4rpx rgb(254, 238, 54) solid;
}

.info
{
  flex:1;
  height:100%;
  border-right:4rpx rgb(254, 238, 54) solid;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  top:10rpx;
}

.detail
{  
  flex:3;
  height:100%;
}

.membership
{
  display: flex;
  flex-direction: column;
  position: relative;
  top:20rpx;
  left:10rpx;
  height: 100%;
}

.setting
{
  position: absolute;
  bottom: 10%;
  right:10rpx;
  width:100rpx;
  height:60rpx;
  font-size: 20rpx;
  background:none;
  color: gray;
}

.setting::after
{
  border:none;
}

.account-bg {
  width: 100%;
  height: 150rpx;
}
.userinfo-avatar {
  width: 108rpx;
  height: 108rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color:black;
}

.list
{
  background-color:rgba(255,255,255,0.9);
}


/* 订单 */
.order {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 90rpx;
}
.myorder-text {
  font-size: 30rpx;
  color: gray;
  margin: 20rpx;
  width: 40%;
}
.myorderlook-text {
  font-size: 30rpx;
  color: gray;
  position: relative;
  right: 20rpx;
  width: 60%;
  text-align: right;
}
.next-image {
  width: 20rpx;
  height: 25rpx;
  position: relative;
  right: 10rpx;
}
.navs {
  display: flex;
}
.nav-item {
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
}
.nav-item .nav-image {
  width: 40rpx;
  height: 40rpx;
  margin: 5rpx;
}
.nav-item text {
  margin-top: 20rpx;
  font-size: 25rpx;
  color: gray;
}
/* 列表 */
.person-list {
  display: flex;
  flex-direction: column;
  align-items: left;
}
.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
}
.item-image {
  width: 40rpx;
  height: 40rpx;
  margin:10rpx;
}
.item-text {
  color: gray;
  font-size: 25rpx;
  margin-left: 20rpx;
}
.line {
  width: 100%;
  height: 2rpx;
  background: lightgray;
}