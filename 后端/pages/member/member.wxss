.member .right{
  position: absolute;
  width: 56%;
  height: 100rpx;
  margin-left: 34%;
  padding: 30rpx 0;
}
.right .content{
  width: 100%;
  height: 100rpx;
}
.content .textname{
  height: 35rpx;
  color: #333;
  font-size: 32rpx;
}
.content .time{
  float: right;
  height: 34rpx;
  bottom: 10rpx;
  width: 65%;
  color: #706a6a;
  font-size: 30rpx;
  margin-top: 20rpx;
  /* margin-bottom: 20rpx; */
}

.textcondition{
  float: right;
  width: 130rpx;
  height: 10rpx;
  font-size: 40rpx;
  text-align: center;
  line-height: 2rpx;
  color:#f55050; 

}



.new{
  position: absolute;
  right: 0;
  border-top:40rpx solid #ffea00;
  border-left:40rpx solid transparent;
  border-right:40rpx solid #ffea00;
  border-bottom: 40rpx solid transparent;
}
.small{
  position: absolute;
  right: 0;
  border-top:18rpx solid #fff;
  border-left:18rpx solid transparent;
  border-right:18rpx solid #fff;
  border-bottom: 18rpx solid transparent;
}
 .title{
  position: absolute;
  top:14rpx;
  right: 7rpx;
  color: #f63020;
  font-size: 20rpx;
  transform: rotate(45deg);
} 


