/* pages/mine/voucher/voucher.wxss */
page{
  background-color: #f5f4f9;
}
.top{
  width: 100%;
  height: 60rpx;
  background-color:#fff;
  margin-top: 2rpx;
}
.top text{
  color:#333;
  height: 60rpx;
  font-size: 24rpx;
  line-height: 60rpx;
  margin: 0 76rpx;
}
.top .checked{
  color: f51322;
  border-bottom: solid #f51322 1rpx;
}
.member{
  position: relative;
  width: 92%;
  height: 150rpx;
  background-color:#fff;
  margin-left:4%;
  margin-top: 10rpx;
}
.member .left{
  float: left;
  width: 30%;
  height: 150rpx;
  background: linear-gradient(to right, #ee7272, #dd504b);
  color: #fff;
}
.left .number {
  height: 50rpx;
  text-align: center;
  margin-top: 50rpx;
}
.left .number .symbol{
  font-size: 30rpx;
}
.left .number .num{
  font-size: 40rpx;
  line-height: 30rpx;
}
.left .condition{
  height: 22rpx;
  font-size: 22rpx;
  text-align: center;
  margin-top: 30rpx;
  line-height: 22rpx;
}

